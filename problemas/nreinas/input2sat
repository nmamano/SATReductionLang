reduction
{
  //x{i}{j}: queen at position (i,j)
  //exactly one per row
  for(i=0;i<n;i++){
    s="exactly 1";
    for(j=0;j<n;j++){
      s=s+" x{i}{j}";
    }
    insertsat(s);
  }
  //atmost 1 per column
  for(j=0;j<n;j++){
    s="atmost 1";
    for(i=0;i<n;i++)s=s+" x{i}{j}";
    insertsat(s);
  }
  //atmost 1 per \ diagonal
  for(i=-n;i<n;i++){
    s="atmost 1";
    for(j=0;j<n;j++){
      s=s+" x{i+j}{j}";
    }
    insertsat(s);
  }
  //atmost 1 per / diagonal
  for(i=-n;i<n;i++){
    s="atmost 1";
    for(j=0;j<n;j++){
      row=i+j;
      col=n-1-j;
      s=s+" x{row}{col}";
    }
    insertsat(s);
  }
}
